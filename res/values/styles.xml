<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MythlingTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MythlingActionBar</item>
        <item name="android:windowBackground">@color/background_dark_blue</item>
        <item name="colorPrimary">@color/title_background_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="LaunchTheme" parent="@style/MythlingTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="PrefsTheme" parent="@style/MythlingTheme">
        <item name="android:windowBackground">@color/background_light_blue</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    
    <style name="MythlingActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/title_background_light</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>    

</resources>